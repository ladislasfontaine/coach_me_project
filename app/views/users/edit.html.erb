<h3>Changer d'avatar ?</h3>

<%= form_tag user_path(params[:id]), multipart: true, method: :put do %>
  <%= file_field_tag :users %>
  <%= submit_tag "mettre à jour" %>
<% end %>

<div>

  <%= form_tag user_path(@user), method: "patch", class: "form-group" do %>

    <div class="form-group form-check">
      <p>Mes informations utilisateur</p>
      <%= label_tag 'Prénom'%>
      <%= text_field_tag 'first_name', @user.first_name %>
    </div>

    <div class="form-group form-check">
      <%= label_tag 'Nom'%>
      <%= text_field_tag 'last_name', @user.last_name %>
    </div>

    <div class="form-group form-check">
      <%= label_tag 'Date de naissance'%>
      <%= text_field_tag 'birth_date', @user.birth_date %>
    </div>

    <div class="phone_number">
      <%= label_tag 'Téléphone'%>
      <%= text_field_tag 'phone_number', @user.phone_number %>
    </div>

    <div class="address">
      <%= label_tag 'adresse'%>
      <%= text_field_tag 'address', @user.address %>
    </div>

    <div class="zip_code">
      <%= label_tag 'zip code'%>
      <%= text_field_tag 'zip_code', @user.zip_code %>
    </div>

    <div class="description">
      <%= label_tag 'description'%>
      <%= text_field_tag 'description', @user.description %>
    </div>

    <%= submit_tag "Modifier" %>
    <button type="button" name="button"> <%= link_to 'retour', user_path(@user) %></button> 

    <% end %>
</div>


<p>=====================================</p>

